{
  // VS Code用デバッグ構成ファイル
  // Next.js (npm run dev) をデバッグ実行するための設定
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: デバッグ実行 (npm run dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run", "dev"
      ],
  // "port": 9229, // Next.jsデバッグには不要
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}
